{% extends "layout.twig" %}

{% block title %}Registreren - Binsta
{% endblock %}

{% block content %}
	<div class="auth-container">
		<div class="auth-form">
			<h1 class="logo">
				<i class="fa-solid fa-code"></i>
				Binsta
			</h1>

			<div class="auth-intro">
				<p>Word lid van de Binsta community en begin met het delen van je code</p>
			</div>

			{% if error %}
				<div class="alert alert-danger">
					<i class="fa-solid fa-circle-exclamation"></i>
					{{ error }}
				</div>
			{% endif %}

			<form action="/register" method="post">
				<div class="form-group">
					<label for="username">Gebruikersnaam</label>
					<div class="input-with-icon">
						<i class="fa-solid fa-user input-icon"></i>
						<input type="text" name="username" id="username" placeholder="code_wizard" required>
					</div>
				</div>
				<div class="form-group">
					<label for="email">E-mailadres</label>
					<div class="input-with-icon">
						<i class="fa-solid fa-envelope input-icon"></i>
						<input type="email" name="email" id="email" placeholder="jouw@email.nl" required>
					</div>
				</div>
				<div class="form-group">
					<label for="password">Wachtwoord</label>
					<div class="input-with-icon">
						<i class="fa-solid fa-lock input-icon"></i>
						<input type="password" name="password" id="password" placeholder="Kies een sterk wachtwoord" required>
					</div>
					<div class="password-strength-meter">
						<div class="strength-bar"></div>
					</div>
				</div>
				<div class="form-group programming-languages">
					<label>Favoriete programmeertalen (optioneel)</label>
					<div class="language-options">
						<label class="language-option">
							<input type="checkbox" name="languages[]" value="javascript">
							JavaScript
						</label>
						<label class="language-option">
							<input type="checkbox" name="languages[]" value="php">
							PHP
						</label>
						<label class="language-option">
							<input type="checkbox" name="languages[]" value="python">
							Python
						</label>
						<label class="language-option">
							<input type="checkbox" name="languages[]" value="java">
							Java
						</label>
						<label class="language-option">
							<input type="checkbox" name="languages[]" value="csharp">
							C#
						</label>
						<label class="language-option">
							<input type="checkbox" name="languages[]" value="other">
							Andere
						</label>
					</div>
				</div>
				<div class="form-group">
					<button type="submit" class="btn btn-primary btn-block">Registreren</button>
				</div>
			</form>

			<div class="auth-divider">
				<span>of</span>
			</div>

			<div class="auth-links">
				<p>Heb je al een account?
					<a href="/login" class="accent-link">Inloggen</a>
				</p>
			</div>

			<div class="auth-footer">
				<p class="auth-footer-text">Door te registreren ga je akkoord met onze voorwaarden en privacybeleid.</p>
			</div>
		</div>

		<div class="auth-features">
			<div class="feature">
				<i class="fa-solid fa-code feature-icon"></i>
				<h3>Deel code in stijl</h3>
				<p>Presenteer je code met prachtige syntax highlighting in meer dan 15 programmeertalen.</p>
			</div>
			<div class="feature">
				<i class="fa-solid fa-users feature-icon"></i>
				<h3>Verbind met ontwikkelaars</h3>
				<p>Vind en volg andere programmeurs, ontdek nieuwe technieken en krijg feedback.</p>
			</div>
			<div class="feature">
				<i class="fa-solid fa-lightbulb feature-icon"></i>
				<h3>Inspireer & Leer</h3>
				<p>Ontdek nieuwe programmeeroplossingen en deel je kennis met de community.</p>
			</div>
		</div>
	</div>
{% endblock %}

{% block scripts %}
	<script>
		document.addEventListener('DOMContentLoaded', function () { // Wachtwoord sterkte meter
const passwordInput = document.getElementById('password');
const strengthBar = document.querySelector('.strength-bar');

if (passwordInput && strengthBar) {
passwordInput.addEventListener('input', function () {
const password = this.value;
let strength = 0;

// Eenvoudige sterkte berekening
if (password.length >= 8) 
strength += 20;


if (password.match(/[a-z]/)) 
strength += 20;


if (password.match(/[A-Z]/)) 
strength += 20;


if (password.match(/[0-9]/)) 
strength += 20;


if (password.match(/[^a-zA-Z0-9]/)) 
strength += 20;



// Kleur en breedte van de meter aanpassen
strengthBar.style.width = strength + '%';

if (strength < 40) {
strengthBar.style.backgroundColor = '#ff4d4d';
} else if (strength < 80) {
strengthBar.style.backgroundColor = '#ffaa00';
} else {
strengthBar.style.backgroundColor = '#00cc44';
}
});
}
});
	</script>
{% endblock %}
